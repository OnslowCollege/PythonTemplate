{
    "image": "ghcr.io/onslowcollege/pythontemplate:latest",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-python.mypy-type-checker",
                "charliermarsh.ruff",
                "eamodio.gitlens",
                "GitHub.vscode-pull-request-github",
                "yzhang.markdown-all-in-one",
                "hediet.vscode-drawio",
                "oderwat.indent-rainbow",
                "usernamehw.errorlens",
                "aaron-bond.better-comments",
                "almenon.arepl",
                "vsls-contrib.gitdoc",
                "slightc.pip-manager",
                "danielgjackson.auto-dark-mode-windows"
            ],
            "settings": {
                "AREPL.telemetry": false,
                "AREPL.skipLandingPage": true,
                "AREPL.showFooter": false,
                "editor.wordWrap": "on",
                "editor.fontSize": 16,
                "editor.formatOnSave": true,
                "editor.defaultFormatter": "charliermarsh.ruff",
                "editor.formatOnSaveMode": "modificationsIfAvailable",
                "editor.formatOnType": true,
                "editor.rulers": [
                    80
                ],
                "editor.tokenColorCustomizations": {
                    "textMateRules": [
                        {
                            "scope": "string.quoted.docstring.multi.python",
                            "settings": {
                                "fontStyle": "italic"
                            }
                        },
                        {
                            "scope": "comment",
                            "settings": {
                                "fontStyle": "italic"
                            }
                        }
                    ]
                },
                "gitdoc.commitValidationLevel": "none",
                "gitdoc.enabled": true,
                "gitlens.showWhatsNewAfterUpgrades": false,
                "gitlens.showWelcomeOnInstall": false,
                "pip-manager.source": "pypi",
                "python.pythonPath": "/usr/local/bin/python",
                "workbench.colorTheme": "Default Light Modern",
                "workbench.preferredDarkColorTheme": "Default Dark Modern",
                "workbench.preferredLightColorTheme": "Default Light Modern"
            }
        }
    },
    "postStartCommand": "python3 -m pip install --upgrade -r ruff && bash -c git remote set-url origin 'https://github.com/OnslowCollege/$(basename $(pwd))'"
}
